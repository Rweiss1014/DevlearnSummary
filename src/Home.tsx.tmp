      {/* Four Impact Areas - Problem Statements */}
      <section className="py-20 px-4 sm:px-6 lg:px-8 bg-white">
        <div className="max-w-6xl mx-auto">
          <motion.div
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}\n            transition={{ duration: 0.6 }}
            className="text-center mb-16"
          >
            <h2 className="text-slate-900 mb-4">The Four Impact Areas</h2>
            <p className="text-slate-600 text-lg">
              Click any question to explore solutions
            </p>
          </motion.div>

          <div className="space-y-8">
            {impactAreas.map((area, index) => (
              <motion.div
                key={area.id}
                initial={{ opacity: 0, y: 20 }}
                whileInView={{ opacity: 1, y: 0 }}
                viewport={{ once: true }}
                transition={{ duration: 0.6, delay: index * 0.1 }}
                className="cursor-pointer group"
                onClick={() => {
                  document.getElementById(`${area.id}-detail`)?.scrollIntoView({ behavior: 'smooth' });
                }}
              >
                <div className="text-center py-8 px-6 rounded-xl hover:bg-slate-50 transition-colors">
                  <h3 
                    className="text-3xl sm:text-4xl md:text-5xl transition-colors duration-300"
                    style={{ color: area.color }}
                  >
                    {area.description}
                  </h3>
                </div>
              </motion.div>
            ))}
          </div>
        </div>
      </section>
